<%= form_for [:admin, @question] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class=form-group>
    <%= f.label :question %>
    <%= f.text_field :question, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :course_id %>
    <%= f.select :course_id, options_for_select(get_list_courses,
      selected: @question.course_id), {}, class: "form-control" %>
  </div>
  <hr>
  <div class="form-group">
    <%= f.fields_for :answers do |build| %>
      <%= render "answer_fields", f: build %>
    <% end %>
    <%= link_to_add_fields t(".add_answer"), f, :answers %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
