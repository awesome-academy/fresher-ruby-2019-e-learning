<tr >
  <td><%= index_of_list @courses, course_counter %></td>
  <td><%= course.name %></td>
  <td><%= course.user_name %></td>
  <% image = course.image.attached? ? course.image : "default" %>
  <td><%= image_tag image, class: "mx-auto img-fluid img-circle d-block image-admin-course" %></td>
  <td><%= course.description %></td>
  <td>
    &ensp; 
    <%= link_to edit_admin_course_path(course), class: "btn btn-warning" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    &ensp;
    <%= link_to admin_course_path(course), method: :delete,
      data: { confirm: t(".are_you_sure?") }, class: "btn btn-danger" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
