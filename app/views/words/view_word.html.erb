<% provide :title, t(".learned") %>
<div class="card shadow mb-4 col-lg-6 col-md-6 col-sm-12 mt-5 m-auto">
  <div class="card-header py-3">
    <hr class="invisible">
    <h6 class="m-0 font-weight-bold text-primary"><%= t "learned" %></h6>
  </div>
  <% if @learnings.present? %>
    <% @learnings.each do |learned| %>
      <div class="card-body text-gray-900">
        <div class="box-part text-center">
          <i class="fa fa-credit-card fa-5x" aria-hidden="true"></i>
          <div class="title">
            <h1><b><%= learned.word_name %></b></h1>
          </div>
          <div class="text">
            <label><b><%= learned.word_name %></b></label>
            <label>(<%= learned.word_pronounce %>): </label>
            <label><%= learned.word_meaning %></label>
          </div>
          <div class="text">
            <%= t ".example" %>: <span><%= learned.word_example %></span>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @learnings, theme: Settings.theme.paging %>
    <hr class="invisible">
  <% else %>
    <div class="text m-auto">
      <%= t ".empty" %>
    </div>
  <% end %>
</div>
